{
  "name": "unique-window-colors",
  "displayName": "Window Colors",
  "description": "Uniquely color different VSCode workspace windows with automatic selections or customized colors and themes.",
  "icon": "img/icon_602.png",
  "version": "1.0.42",
  "publisher": "stuart",
  "author": {
    "name": "Stuart Robinson"
  },
  "engines": {
    "vscode": "^1.20.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stuartcrobinson/unique-window-colors"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "keywords": [
    "productivity",
    "fun",
    "folder",
    "customize",
    "colorblind"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.library",
        "title": "Library - Save & Load Colors",
        "category": "ðŸŒˆ Window Colors"
      },
      {
        "command": "extension.automaticColors",
        "title": "Automatic Colors",
        "category": "ðŸŒˆ Window Colors"
      },
      {
        "command": "extension.setColors",
        "title": "Set Colors",
        "category": "ðŸŒˆ Window Colors"
      },
      {
        "command": "extension.setTheme",
        "title": "Set Theme",
        "category": "ðŸŒˆ Window Colors"
      },
      {
        "command": "extension.animate",
        "title": "Animate ðŸ“½ (Beta)",
        "category": "ðŸŒˆ Window Colors"
      },
      {
        "command": "extension.reset",
        "title": "Remove Colors (opens menu)",
        "category": "ðŸŒˆ Window Colors"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Window Colors Configuration",
      "properties": {
        "windowColors.overwriteAllWorkspaceColorsWithAutomaticPortfolio": {
          "type": "boolean",
          "default": false
        },
        "windowColors.animationMillisecondsPerStep": {
          "type": "number",
          "title": "Animation: milliseconds per color",
          "description": "Faster transitions might cause the UI to flicker.",
          "default": 200
        },
        "windowColors.animationStepsPerTransition": {
          "type": "number",
          "title": "Animation: Number of gradient colors between input colors",
          "description": "Increase for smoother transitions",
          "default": 400
        },
        "windowColors.AutomaticColorsPortfolio": {
          "type": "string",
          "description": "Select the portfolio from which to grab automatic colors.  Custom portfolios can be selected via the command palette.  'Automatic' supplies a light or dark color based on your current theme.",
          "default": "Automatic"
        },
        "windowColors.ModifyTitleBar": {
          "type": "boolean",
          "default": true
        },
        "windowColors.ModifyActivityBar": {
          "type": "boolean",
          "default": true
        },
        "windowColors.ModifyStatusBar": {
          "type": "boolean",
          "default": true
        },
        "windowColors.globalData": {
          "type": "object"
        },
        "windowColors.internalSettings": {
          "type": "object"
        },
        "windowColors.RecentGradientColors": {
          "type": "array"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.22",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@types/color": "^3.0.0",
    "@types/tinycolor2": "^1.4.1",
    "color": "^3.1.0",
    "platform-folders": "^0.4.0",
    "tinycolor2": "^1.4.1",
    "tinygradient": "^1.0.0",
    "vscode-nls": "^4.1.0"
  }
}
